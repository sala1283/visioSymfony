{% extends "base.html.twig" %}
{% block title %} Le gite: {{ gite.name }}{% endblock %}
{% block body %}
<div class="row mt-4">
<h1 class="display-5 fw-bold mt-5 mb-4">{{ gite.name }}</h1>
<div class="col-md-6">
<p class="text-justify">{{ gite.description }}</p>
<button class="btn btn-success" id="contact">Contact</button>
<div class="form-contact hidden">
{{form_start(form)}}
{{form_rest(form)}}
<button type="submit" class="btn btn-primary mt-3">Envoyer</button>
{{form_end(form)}}
</div>
</div>
<div class="col-md-6">
{% if gite.imageName %}
<img src="{{ vich_uploader_asset(gite, 'imageFile') }}" class="card-img-top" alt="{{ gite.name }}">
{% else %}
<img src="images/img/home.jpg" class="card-img-top" alt="{{ gite.name }}">
{% endif %}
</div>
</div>
<div class="row mt-5">
<div class="col-md-6">
<h2 class="mt-5 mb-4">DÃ©tails du gite:</h2>
<table class="table table-striped">
<tbody>
<tr>
<th>Surface</th>
<td>{{gite.surface}}</td>
</tr>
<tr>
<th>Chambre</th>
<td>{{gite.bedrooms}}</td>
</tr>
<tr>
<th>Animaux</th>
{% if gite.animals %}
<td>Accepter</td>
{% else %}
<td>Refuser</td>
{% endif %}
</tr>
<tr>
<th>Equipements</th>
<td>
<ul>{% for eq in gite.equipements %}
<li>{{eq.name}}</li>
{% endfor %}
</ul>
</td></tr>

<tr>
<th>Adresse</th>
<td>
<ul>
<li>{{gite.address}}</li>
<li>{{gite.city}}</li>

</ul>
</td></tr>


</tbody>
</table>
</div>
<div class="col-md-6">
<h2 class="mt-5 mb-4">Localisation:</h2>
<div id="map" style="width:100%; height:400px" data-lat="{{gite.lat}}" data-lng="{{gite.lng}}">
</div>
</div>
</div>
{% endblock %}
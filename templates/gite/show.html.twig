{% extends "base.html.twig" %}
{% block title %} Le gite {% endblock %}
{% block body %}
<div class="row">
<h1>Le gite "{{gite.name}}"</h1>
</div>
<div class="row">
<div class="col-md-6">
{% if gite.imageName %}
<img src="{{ vich_uploader_asset(gite, 'imageFile') }}" class="card-img-top" alt="{{ gite.name }}">
{% else %}
<img src="images/img/home.jpg" class="card-img-top" alt="{{ gite.name }}">
{% endif %}
</div>
<div class="col-md-6">
<h2>DÃ©tails du gite:</h2>
<p>{{gite.description}}</p>
<table class="table table-striped">
<tbody>
<tr>
<th>Surface</th>
<td>{{gite.surface}}</td>
</tr>
<tr>
<th>Chambre</th>
<td>{{gite.bedrooms}}</td>
</tr>
<tr>
<th>Animaux</th>
{% if gite.animals %}
<td>Accepter</td>
{% else %}
<td>Refuser</td>
{% endif %}
</tr>
<tr>
<th>Equipements</th>
<td>
<ul>{% for eq in gite.equipements %}
<li>{{eq.name}}</li>
{% endfor %}
</ul>
</td></tr>
</tbody>
</table>
</div>
<div class="col-md-6">
</div>
</div>
{% endblock %}
{% extends  'base.html.twig' %}
{% block title %} Gites Progica {% endblock %}
{% block  body %}
<h2 class="mt-5 mb-4">Gites Progica: La location de vacances de vos rÃªves</h2>
<div class="row">
{% for gite in gites %}
<div class="col-md-4 mt-3">
<div class="card" style="width: 18rem;">
{% if gite.imageName %}
<img src="{{ vich_uploader_asset(gite, 'imageFile') }}" class="card-img-top" alt="{{ gite.name }}">
{% else %}
<img src="images/img/home.jpg" class="card-img-top" alt="{{ gite.name }}">
{% endif %}
  <div class="card-body">
    <h5 class="card-title">{{gite.name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{gite.createdAt|format_datetime()}}</h6>
    <p class="card-text">{{gite.description}}</p>
    <a  class="btn btn-secondary" href="{{path('gite.show', {'id':gite.id})}}">Voir le gite</a>
  </div>
</div>
</div>
{% endfor %}
<a href="{{path('gite.index')}}" class="btn btn-success mt-2">Voir tous les gites</a>
</div>
{% endblock %}